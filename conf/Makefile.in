                            $(LIBDIR)/test_RecoveryFilter.so
	@echo "Linking `basename $*` ..."
	$(PURIFY) $(CXX) $(TEST_CXXFLAGS) $(LDFLAGS) -o $@ $(OBJDIR)/$*.o \
	   $(OBJDIR)/test_Recovery.o $(OBJDIR)/test_Recovery_aux.o \
           $(OBJDIR)/ThroughputExperiment.o $(LIBMRNET) $(LIBXPLAT) $(LIBS)

